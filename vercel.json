{
  "crons": [
    {
      "path": "/api/cron/send-news",
      "schedule": "*/5 9-11 * * *"
    },
    {
      "path": "/api/monitor",
      "schedule": "0 * * * *"
    }
  ],
  "buildCommand": "prisma generate && next build",
  "installCommand": "npm install",
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true"
  },
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
} 